set -e

# create DOM from individual MD files
for name in all chapter include index ol p pages ul verbatim one_chapter tables;
do
    python slider.py --md cases/$name.md --parse > cases/dom/$name.json
done

# Create HTML from individual MD files
for name in all chapter pages;
do
    rm -rf cases/html/$name/*
    python slider.py --md cases/$name.md --html --dir cases/html/$name/ --ext html
done


# Create SIMPLE_HTML files without extension from individual MD files
for name in all;
do
    rm -rf cases/simple_html/$name/*
    python slider.py --templates cases/simple_templates --md cases/$name.md --html --dir cases/simple_html/$name/
done


# Create HTML files without extension from individual MD files
for name in all index;
do
    rm -rf cases/plain_html/$name/*
    python slider.py --md cases/$name.md --html --dir cases/plain_html/$name/
done


# Create HTML files without extension based on YAML configuration file
for name in multi;
do
    rm -rf cases/multi_html/$name/*
    #set -x
    python slider.py --yaml cases/$name.json --html --dir cases/multi_html/$name/
done

# Create HTML files based on YAML configuration file
for name in multi;
do
    rm -rf cases/multi_html_ext/$name/*
    python slider.py --yaml cases/$name.json --html --dir cases/multi_html_ext/$name/ --ext html
done
