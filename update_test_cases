for name in all chapter include index ol p pages ul verbatim;
do
    python slider.py --md cases/$name.md --parse > cases/dom/$name.json
done

for name in all chapter pages;
do
    rm -rf cases/html/$name/*; python slider.py --md cases/$name.md --html --dir cases/html/$name/
done


for name in all;
do
    rm -rf cases/simple_html/$name/*; python slider.py --templates cases/simple_templates --md cases/$name.md --html --dir cases/simple_html/$name/
done
