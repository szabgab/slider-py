set -e

for name in all chapter include index ol p pages ul verbatim;
do
    python slider.py --md cases/$name.md --parse > cases/dom/$name.json
done

for name in all chapter pages;
do
    rm -rf cases/html/$name/*
    python slider.py --md cases/$name.md --html --dir cases/html/$name/ --ext html
done


# create simple_html files without extension to test that as well
for name in all;
do
    rm -rf cases/simple_html/$name/*
    python slider.py --templates cases/simple_templates --md cases/$name.md --html --dir cases/simple_html/$name/
done


# create files without extension
for name in all index;
do
    rm -rf cases/plain_html/$name/*
    python slider.py --md cases/$name.md --html --dir cases/plain_html/$name/
done


# create files based on yaml configuration file
for name in multi;
do
    rm -rf cases/multi_html/$name/*
    #set -x
    python slider.py --yaml cases/$name.yml --html --dir cases/multi_html/$name/
done

for name in multi;
do
    rm -rf cases/multi_html_ext/$name/*
    #set -x
    python slider.py --yaml cases/$name.yml --html --dir cases/multi_html_ext/$name/ --ext html
done
